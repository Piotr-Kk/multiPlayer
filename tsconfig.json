{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/types.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "!node_modules/@types"
  ]
}